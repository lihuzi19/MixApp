<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="notes"
            type="com.lihuzi.takenotes.model.NotesModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_record_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="xxx"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_record_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="xxx"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_record_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="xxx"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_record_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="xxx"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_record_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="xxx"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_color_dark" />
    </LinearLayout>
</layout>